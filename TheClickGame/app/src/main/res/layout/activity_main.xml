<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/tvLabelPontos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:text="Pontos por clique: 15"
            android:textSize="30sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btClique"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text="Clique Aqui"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@id/tvLabelPontos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvLabelQuantidadePontos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:text="Pontos: "
            android:textSize="30sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btClique" />

        <TextView
            android:id="@+id/tvQuantidadePontos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:text="0"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@id/tvLabelQuantidadePontos"
            app:layout_constraintTop_toBottomOf="@id/btClique" />


        <TextView
            android:id="@+id/tvLabelQuantidadeCLiques"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:text="Cliques: "
            android:textSize="30sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvQuantidadePontos" />

        <TextView
            android:id="@+id/tvQuantidadeCLique"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:text="0"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@id/tvLabelQuantidadePontos"
            app:layout_constraintTop_toBottomOf="@id/tvQuantidadePontos" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>